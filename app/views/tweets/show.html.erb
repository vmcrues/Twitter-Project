<h3>@<%= @tweet.user.username %>'s Tweet</h3>

<div class= "well">
  <p>
    <%= image_tag @tweet.user.avatar.url, size:30 %>
    <%= @tweet.user.name %>
    <%= link_to "@#{@tweet.user.username}", show_user_path(id: @tweet.user.id) %>
    <%= time_ago_in_words(@tweet.created_at) %>
  </p>
  <p><%= @tweet.message.html_safe %></p>

</div>

<%= link_to 'Edit', edit_tweet_path(@tweet), class: "btn btn-warning"%>
<%= link_to 'Back', tweets_path, class: "btn btn-default" %>












